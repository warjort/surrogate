{
  "schemaVersion": 1,
  "id": "${archivesBaseName}",
  "version": "${version}",

  "name": "${projectDescription}",
  "description": "${projectDescription}",
  "authors": [
    "warjort"
  ],
  "contact": {
    "homepage": "${homeLink}",
    "sources": "${sourceLink}"
  },

  "license": "${license}",
  "icon": "assets/${project.name}/icon.png",

  "environment": "*",

  "entrypoints": {
    "client": ["surrogate.SurrogateClient"],
    "main": ["surrogate.SurrogateMain"]
  },

  "mixins": [
      "surrogate.mixins.json"
  ],

  "depends": {
    "fabricloader": "${loaderConstraint}",
    "minecraft": "${minecraftConstraint}"
  },
  "suggests": {
    "fabric": "*"
  },
  "accessWidener": "surrogate.accesswidener"
}
